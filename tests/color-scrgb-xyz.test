# # ## ### ##### ######## ############# #####################
## AKTIVE. Color conversion -- XYZ / scRGB round trip
##         Both directions.

kt check Tcl     8.6
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt local testing aktive

kt source support/util.tcl

# # ## ### ##### ######## ############# #####################
## Syntax

syntax {
    XYZ src
} {aktive op color scRGB to}

syntax {
    scRGB src
} {aktive op color XYZ to}

# # ## ### ##### ######## ############# #####################
## Round trip of the 216 web "standard" colors

foreach-color 3 [webcolor-table-fp] rgb bands {
    set  b ([join $bands ,])

    # for the complementary round trip
    set xyz    [aktive op color scRGB to XYZ $rgb]
    set xbands [pixels/ $xyz]
    set xb     ([join $xbands ,])

    incr k

    # # ## ### ##### ######## ############# #####################

    test aktive-op-color-scRGB-to-XYZ-2.${k}-$b "aktive op color scRGB to XYZ, round trip ($bands)" -body {
	pixels aktive op color XYZ to scRGB \
	    [aktive op pass \
		 [aktive op color scRGB to XYZ $rgb]]
    } -match pixels -result $bands

#continue

    test aktive-op-color-XYZ-to-scRGB-2.${k}-$xb "aktive op color XYZ to scRGB, round trip ($xbands)" -body {
	pixels aktive op color scRGB to XYZ \
	    [aktive op pass \
		 [aktive op color XYZ to scRGB $xyz]]
    } -match pixels -result $xbands
}

unset rgb bands b xyz xbands xb k
# # ## ### ##### ######## ############# #####################
cleanupTests
return
