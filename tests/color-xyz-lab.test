# # ## ### ##### ######## ############# #####################
## AKTIVE. Color conversion -- XYZ / CIE Lab round trip
##         Both directions.

kt check Tcl     8.6
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt local testing aktive

kt source support/util.tcl

# # ## ### ##### ######## ############# #####################
## Syntax

syntax {
    XYZ src
} {aktive op color Lab to}

syntax {
    Lab src
} {aktive op color XYZ to}

# # ## ### ##### ######## ############# #####################
## Round trip of the 216 web "standard" colors

foreach-color 3 [webcolor-table-fp] rgb bands {

    set xyz    [aktive op color scRGB to XYZ $rgb]
    set xbands [pixels/ $xyz]
    set xb     ([join $xbands ,])

    # # ## ### ##### ######## ############# #####################

    # for the complementary round trip
    set lab    [aktive op color XYZ to Lab $rgb]
    set lbands [pixels/ $lab]
    set lb     ([join $lbands ,])

    incr k

    # # ## ### ##### ######## ############# #####################

    test aktive-op-color-Lab-to-XYZ-2.${k}-$lb "aktive op color Lab to XYZ, round trip ($lbands)" -body {
	pixels aktive op color XYZ to Lab \
	    [aktive op pass \
		 [aktive op color Lab to XYZ $lab]]
    } -match pixels -result $lbands

    test aktive-op-color-XYZ-to-Lab-2.${k}-$xb "aktive op color XYZ to Lab, round trip ($xbands)" -body {
	pixels aktive op color Lab to XYZ \
	    [aktive op pass \
		 [aktive op color XYZ to Lab $xyz]]
    } -match pixels -result $xbands
}

unset rgb bands xyz xbands xb lab lbands lb k
# # ## ### ##### ######## ############# #####################
cleanupTests
return
